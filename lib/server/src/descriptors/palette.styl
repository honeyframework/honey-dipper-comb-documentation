.palette {
  @extend .scaffold;
  @extend .scaffold.row;
  @extend .scaffold.row.wrap;
  @extend .scaffold.row.bubble-spacing-default;
  @extend .scaffold.row.bubble-spacing-default.only-stack;

  .palette-item {
    border-radius: 4px;
    @extend .scaffold;
    @extend .scaffold.col;
    @extend .scaffold.col.bubble-spacing-small;
    @extend .scaffold.col.bubble-spacing-small.only-stack;
  }
}
