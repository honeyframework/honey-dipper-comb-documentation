.content {

  h2 {
    color: darken($color-brand-grad-dark, 40%);
    padding-bottom: $spacing-default;
    border-bottom: 1px solid lighten($color-brand-grad-dark, 10%);
    margin-bottom: $spacing-large;
  }

  h3 {
    color: darken($color-brand-grad-dark, 40%);
    font-size: 12px;
    text-transform: uppercase;
  }

  p, label {
    font-size: 12px;
  }

  p {
    color: lighten(black, 50%);
  }

  section {
    @extend .scaffold;
    @extend .scaffold.col;
    @extend .scaffold.col.bubble-spacing-default;
    @extend .scaffold.col.bubble-spacing-default.only-stack;
  }
}
